{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build beast-mvc",
            "type": "shell",
            "command": "make",
            "presentation": {
                "clear": true,
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true
            },
            "options": {
                "cwd":"${workspaceFolder}/../../build/",
                "env": {
                    "MAKEFLAGS": "-j4"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}